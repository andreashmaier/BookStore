<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <welcome-file-list>
        <welcome-file>einloggen</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>de.gbsschulen.bookstore.login.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ListBooks</servlet-name>
        <servlet-class>de.gbsschulen.bookstore.book.ListBooksServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/einloggen</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ListBooks</servlet-name>
        <url-pattern>/listBooks.do</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>ListBooks</servlet-name>
        <url-pattern>/listeBuecher.do</url-pattern>
    </servlet-mapping>

</web-app>